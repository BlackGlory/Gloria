{
  "version": "1.0.0"
, "name": "Gloria"
, "manifest_version": 2
, "description": "A secretary in Chrome."
, "background": {
    "scripts": ["background.js"]
  , "persistent": true
  }
, "options_ui": {
    "page": "options.html"
  , "chrome_style": false
  }
, "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
, "permissions": [
    "cookies"
  , "webRequest"
  , "webRequestBlocking"
  , "<all_urls>"
  ]
}
